<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:backgroundTint="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/newsfeed_post_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/newsfeed_image_content_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/newsfeed_post_text"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/newsfeed_post_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newsfeed_post_time"
        android:layout_width="138dp"
        android:layout_height="21dp"
        android:layout_marginStart="326dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/newsfeed_post_image"
        app:layout_constraintTop_toBottomOf="@+id/newsfeed_post_text"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/feed_checkout"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:background="@color/colorPrimary"
        android:text="See workout"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/newsfeed_post_image"
        app:layout_constraintTop_toBottomOf="@+id/newsfeed_post_text" />
</androidx.constraintlayout.widget.ConstraintLayout>